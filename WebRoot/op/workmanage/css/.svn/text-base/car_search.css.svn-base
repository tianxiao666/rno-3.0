/* CSS Document */
.container-main{ margin-top:10px;padding:0px 5px;}
.container-bottom { text-align:center; padding:0; padding-bottom:20px;}

.container-tab2{ margin: 0 auto;min-width:700px; clear:both;border-bottom: 1px solid #CCCCCC; margin-bottom:10px;}
.container-tab2 ul{ width:100%; line-height:25px;clear:both;}
.container-tab2 ul li{ float:left; padding:0 5px; border:1px solid #ccc; background:#DFE8F6; border-left:none;min-width:90px; text-align:center; border-bottom:none;}
.container-tab2 ul li a{ display:block; color:#333; font-size:12px; font-weight:bold; text-decoration:none;}
.container-tab2 ul .tab2-li-show{background: #FFFFFF;}

/* 表格样式1，通用 */
.main-table1{ width:100%; margin: 0px auto 10px; background:#FFF; border:1px solid #ccc;}
.main-table1 th{ padding:0px 10px; background:#eee; color:#444; white-space:nowrap; border-bottom:#CCC 1px solid; line-height:30px;}
.main-table1 tr td{ border-bottom:1px solid #ccc; padding:6px; padding-left:6px; color:#000; line-height:21px; vertical-align:middle; white-space:nowrap; background:#fff;}
.main-table1 tr td a{ color:#03F;}
.main-table1 .menuTd{ width:10%; background: #E8EDFF;text-align:right; white-space:nowrap;}
.main-table1 .table-head{ text-align:center; border:#000; color:999; font-weight:bold;}
.main-table1 img{ position:relative; left:-4px; top:3px;}
.main-table1 .higherLine{height:80px;}
.main-table1 tr td select{ width:133px;}
.main-table1 tr td select option{ padding:1px 0;}

/*搜索栏*/
.search_bar{padding:4px; background:#DFE8F6;}
.select_tree_div{border:1px solid #ccc; border-top:none; position:absolute;background:#fff;left:4px;top:27px;z-index:3;height:240px;width:200px; overflow:auto; z-index:99;}
#treeDiv ul,#treeDiv ul li{background-color:#fff; font-weight:normal;}
/* 选择组织架构按钮 */
.select_button {background: url(../images/select.png) no-repeat scroll;display: inline-block;height: 24px;margin:2px 0 0 -31px;position: absolute;width: 24px;
}