/* 一些公用的类 */

.m0a{margin:0 auto;}

/* 设置float，兼容IE6双外边距错误 */
.fl{float:left; _display:inline;}
.fr{float:right; _display:inline;}
.inline{ display::inline;}
/* 字体行高 */
.lh30{line-height:30px;}

/* 字体大小 */
.f-z14{font-size:14px;}
.f-z16{font-size:16px;}

/* 字体对齐方式 */
.tl{text-align:left;}
.tr{text-align:right;}
.tc{text-align:center;}

/* border */
.nbt{border-top:none;}
.nbr{border-right:none;}
.nbb{border-bottom:none;}
.nbl{border-left:none;}

#tl{text-align:left;}
#tr{text-align:right;}
#tc{text-align:center;}

.f-bold{font-weight:bold;}
.f-normal{font-weight:normal;}

.vm {vertical-align: middle !important;}
.vt {vertical-align: top !important;}

.opacity0{opacity:0; filter:alpha(opacity=0); }
.cur{cursor: pointer;}
.clear{clear:both;}

/* color */
.red{color:#f00;}
.ccc{color:#ccc;}
.black{ color:#000; padding-left:20px;}
.grey{color:#666;}

/* 原子类 */
.mt2{margin-top:2px !important;}
.mt10{margin-top:10px !important;}
.ml10{margin-left:10px !important;}
.mr10{margin-right:10px !important;}
.mr30{margin-right:30px !important;}
.mb10{margin-bottom:10px !important;}

.pt10{padding-top:10px !important;}

/* 增强效果 */
.radius5{-webkit-border-radius: 5px;-moz-border-radius: 5px; border-radius: 5px;}
.radius3{-webkit-border-radius: 3px;-moz-border-radius: 3px; border-radius: 3px;}
.box-shadow2{-webkit-box-shadow:#ddd 2px 2px 2px; -moz-box-shadow:#ddd 2px 2px 2px; box-shadow:#ddd 2px 2px 2px;}

/* 宽度百分比定义 */
.w100{ width:100%;}
.w90{ width:90%;}
.w80{ width:80%;}
input[type="text"].w100{ width:100%;}
input[type="text"].w90{ width:90%;}
input[type="text"].w80{ width:80%;}
input[type="text"].w420{ width:420px;}

/* 表单样式美化 */
input, select, textarea {
	font: 12px/1.5 Tahoma, 'Microsoft Yahei', 'Simsun';
	outline:none;
}
input[type="text"] {
	width:110px;
	padding:4px;
	background:url(../images/input.png) 0px -75px no-repeat;
	border:1px solid #CDCDCD;
	border-color: #9A9A9A #CDCDCD #CDCDCD #9A9A9A;
}
input[type="button"], input[type="submit"] {
	cursor:pointer;
	height:24px;
	line-height: 24px;
	padding: 2px 6px 3px;
	border-right:1px solid #c8c8c8;
	border-left:none;
	border-top:none;
	border-bottom:none;
	background:url(../images/input.png) no-repeat;
	background-position:0px 0px;
	position:relative;
	top:-1px;
}
input::-moz-focus-inner,input[type="submit"]::-moz-focus-inner,select::-moz-focus-inner{  
   border:none;  
}  
input[type="button"]:hover,input[type="submit"]:hover {
	background-position:0px -25px;
	border-right:1px solid #cccbcb;
}

/* 特殊按钮样式*/
input[type="button"].sp_button{background:lightgreen; color:#000; border:1px solid #aaa;width:50px; border-radius:5px; height:26px;}
input[type="button"].sp_button:hover{background:seagreen; color:#fff; }

/*按下按钮、提交显示样式切换*/
input[type="button"].input_button_down,input[type="submit"].input_button_down {
	background-position:0px -50px;
}
input[type="checkbox"], input[type="radio"] {
	position:relative;
	top:2px;
	left:-2px;
	cursor:pointer;
}
select {
	line-height:20px;
	padding:2px;
	background:url(../images/input.png) no-repeat 0px -75px;
	border:1px solid #CDCDCD;
	border-color: #9A9A9A #CDCDCD #CDCDCD #9A9A9A;
}
textarea {
	width:400px;
	height:60px;
	padding:2px 0px 0px 2px;
	background:#FFF url(../images/input.png) 0px -75px repeat-x;
	border:1px solid #cdcdcd;
	border-color: #9A9A9A #CDCDCD #CDCDCD #9A9A9A;
	overflow-y:auto;
	resize: none;
}
.date_button{ cursor:pointer; height:20px; width:20px; background:url(../images/date_choose.png) no-repeat;display: inline-block; margin:1px 0 0 -22px; position: absolute; }


/*  分页控件  */
.paging_div{ font-family:"微软雅黑" width:95%; margin:8px auto; text-align:right;}
.tool_fl_fr{ line-height:23px; padding: 5px; border-bottom:1px solid #ccc;}

input.paging_input_text{height:15px;vertical-align:middle; line-height:15px; padding:2px 1px; width:18px; text-align:center; background:#fff;}
select.paging_input_text{padding:1px;width:45px;background:#fff;vertical-align:middle;}
a.paging_link{height:19px; line-height:18px; width:20px; text-align:center; background:#fff; border:1px solid #ccc; color:#000; text-decoration:none;display:inline-block; vertical-align:middle; border-radius:2px;}
a.page-first{ background:url(../images/ext_paging/page-first.gif) 2px 2px no-repeat;}
a.page-prev{ background:url(../images/ext_paging/page-prev.gif) 2px 2px no-repeat;}
a.page-next{ background:url(../images/ext_paging/page-next.gif) 2px 2px no-repeat;}
a.page-last{ background:url(../images/ext_paging/page-last.gif) 2px 2px no-repeat;}
a.page-go{padding:0px 2px;color:#009;}
a.paging_link:hover{border:1px solid #99BBE8; box-shadow:1px 1px 3px #bbb;}